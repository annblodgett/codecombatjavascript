// Your hero doesn't know these enemy's names!
// The glasses give you the findNearestEnemy ability.

var enemy1 = hero.findNearestEnemy();
hero.attack(enemy1);
hero.attack(enemy1);
var enemy2 = hero.findNearestEnemy();
hero.attack(enemy2);
hero.attack(enemy2);
hero.moveDown();
var enemy3 = hero.findNearestEnemy();
hero.attack(enemy3);
hero.attack(enemy3);
